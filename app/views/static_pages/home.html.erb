<div class="body-unit" >
  <div class="center hero-unit">
    <h1>Welcome to My College Admission</h1>
    <h2>
      This is the home page for the
      <a href="/">Admission application for college</a>
    </h2>
    <% if user_signed_in? && is_admin? %>
      <%= link_to "Control Panel", controlpanel_path, class: "btn btn-large btn-primary" %>
    <% elsif user_signed_in? && is_verifier? %>
      <%= link_to "Verfier", verify_path, class: "btn btn-large btn-primary" %>
    <% elsif user_signed_in? %>
      <%= link_to "Home", home_path, class: "btn btn-large btn-primary" %>
    <% else %>
      <%= link_to "Register Yourself", signup_path, class: "btn btn-large btn-primary" %>
      <%= link_to "Existing Users", signin_path, class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
