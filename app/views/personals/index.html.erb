<h1>Listing personals</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th>Blood group</th>
      <th>Fathers name</th>
      <th>Mothers name</th>
      <th>Address present</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personals.each do |personal| %>
      <tr>
        <td><%= personal.user_id %></td>
        <td><%= personal.date_of_birth %></td>
        <td><%= personal.gender %></td>
        <td><%= personal.blood_group %></td>
        <td><%= personal.fathers_name %></td>
        <td><%= personal.mothers_name %></td>
        <td><%= personal.address_present %></td>
        <td><%= link_to 'Show', personal %></td>
        <td><%= link_to 'Edit', edit_personal_path(personal) %></td>
        <td><%= link_to 'Destroy', personal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

